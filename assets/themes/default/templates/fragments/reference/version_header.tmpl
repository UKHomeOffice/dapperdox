<!-- Required .API and .Title parameters -->
<div class="page-header">
    <h1 class="pull-left nomargin">{{ .Title }}</h1>
    <div class="clearfix"></div>
    <p>{{ .TitleSuffix }}
    {{ if .ExternalDocs }}
        (<a href="{{ .ExternalDocs.URL }}">{{ .ExternalDocs.Description }}</a>)
    {{ end }}
    </p>
    {{ if .Versions }}
    <div class="pull-right">
        <div class="btn-group">
            <button class="nopadding btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                    aria-expanded="false">
                Version {{ .Version }} <span class="caret"/>
            </button>
            <ul class="dropdown-menu pull-right">
                {{ range $version := .Versions }}
                <li><a href="?v={{ $version }}">{{ $version }}</a></li>
                {{ end }}
                {{ if $.LatestVersion }}
                <li role="separator" class="divider"></li>
                <li><a href="?">Latest version {{ $.LatestVersion }}</a></li>
                {{ end }}
            </ul>
        </div>
    </div>
    {{ end }}
    <div class="clearfix"></div>
</div>
